---
import '@styles/admin.css'
import PwaUpdateComponent from '@astrocomponents/pwa-update.component.astro'
import LoaderComponent from '@astrocomponents/LoaderComponent.astro';

interface IProps {
	title: string,
    meta: string,
    body: string,
    page: string,
    loader: string,
    reload: string,
}

const { title, meta, body, page, loader, reload } = Astro.props as IProps
const bodyClass = [loader, reload].join(' ').trim()
---

<html lang="es">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width">
    
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    
    <title>{title}</title>
    <Fragment set:html={meta}>
</head>
<body class={bodyClass} data-page={page}>
    <PwaUpdateComponent/>
    <LoaderComponent/>
    
    <Fragment set:html={body}>

    <script>
        import { initApp } from '@helpers/app.helper'
        initApp()
    </script>
</body>
</html>